{% extends "bootstrap_base.jinja" %}

{% block scripts %}
    <script>
        $(document).ready(function(){
            $('.datatables').DataTable({
              iDisplayLength : 25
            });
        });
    </script>
{% endblock scripts %}

{% block content %}
    <table class="datatables">
      <thead>
        <th>Date</th>
        <th>Customer</th>
        <th>Line Item Count</th>
      </thead>
      <tbody>
        {% for sale in sales %}
          {% include 'sale_line.html' %}
        {% endfor %}
      </tbody>
    </table>
{% endblock content %}